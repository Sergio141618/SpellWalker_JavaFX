<VBox alignment="CENTER" prefHeight="661.0" prefWidth="1764.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.cifpcarlos3.spellwalker.MainAppController">
   <children>
      <ImageView fitHeight="241.0" fitWidth="276.0">
         <image>
            <Image url="@spellwalker_title.png" />
         </image>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </ImageView>
      <GridPane fx:id="tabla" prefHeight="191.0" prefWidth="792.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextField fx:id="campoUsuario" maxWidth="400.0" prefHeight="30.0" prefWidth="400.0" styleClass="texto" GridPane.columnIndex="1">
               <GridPane.margin>
                  <Insets top="10.0" />
               </GridPane.margin>
            </TextField>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="tex" text="Usuario" GridPane.halignment="RIGHT">
               <GridPane.margin>
                  <Insets right="20.0" top="10.0" />
               </GridPane.margin>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="tex" text="Contraseña" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets bottom="10.0" right="20.0" />
               </GridPane.margin>
            </Text>
            <Button fx:id="btnAcceder" mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" styleClass="botones" text="Iniciar sesion" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets bottom="30.0" left="200.0" />
               </GridPane.margin>
            </Button>
            <PasswordField fx:id="campoContrasena" maxWidth="400.0" prefHeight="30.0" prefWidth="400.0" styleClass="texto" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets bottom="10.0" />
               </GridPane.margin>
            </PasswordField>
         </children>
         <VBox.margin>
            <Insets bottom="40.0" />
         </VBox.margin>
      </GridPane>
      <Button fx:id="btnCerrarAplicacion" mnemonicParsing="false" onAction="#handlerCerrarAplicacion" styleClass="botones" text="Cerrar aplicación">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets left="1700.0" top="20.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
